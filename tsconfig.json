{
  "compilerOptions": {
    "declarationDir": "./types",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["dom", "es2017"],
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "removeComments": true,
    "stripInternal": true,
    "strictPropertyInitialization": false
  },
  "include": ["src/*"],
  "exclude": ["dist", "docs"],
}
